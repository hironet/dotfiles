if &compatible
  set nocompatible
endif
set autoindent
set clipboard=unnamed
set encoding=utf-8
set expandtab
set formatoptions=q
set laststatus=2
set number
set nobackup
set noswapfile
set noundofile
set nowrapscan
set statusline=%<%f\ %m%r%{'['.(&fenc!=''?&fenc:&enc).']['.&ff.']'}%=%l/%L,%v
set tw=0

filetype plugin indent on
syntax on
